<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="cn.izhiju.kura.can.CanSocketGate"
         name="CAN Gate" 
         description="Can Gate application.">
              
        <Icon resource="http://s3.amazonaws.com/kura-resources/application/icon/applications-other.png" size="32"/>
        
        <AD id="CloudPublisher.target"
            name="CloudPublisher Target Filter"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.cloud.publisher.CloudPublisher-wan-can)"
            description="Specifies, as an OSGi target filter, the pid of the Cloud Publisher used to publish messages to the cloud platform.">
        </AD>
        
        <AD id="CloudSubscriber.target"
            name="CloudSubscriber Target Filter"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.cloud.subcriber.CloudSubscriber-wan-can)"
            description="Specifies, as an OSGi target filter, the pid of the Cloud Subscriber used to receive messages from the cloud platform.">
        </AD>
        
        <AD id="CloudPublisherLan.target"
            name="CloudPublisherLan Target Filter"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.cloud.publisher.CloudPublisher-lan-can)"
            description="Specifies, as an OSGi target filter, the pid of the Cloud Publisher used to publish messages to the cloud platform.">
        </AD>
        
        <AD id="CloudSubscriberLan.target"
            name="CloudSubscriberLan Target Filter"
            type="String"
            cardinality="0"
            required="true"
            default="(kura.service.pid=org.eclipse.kura.cloud.subcriber.CloudSubscriber-lan-can)"
            description="Specifies, as an OSGi target filter, the pid of the Cloud Subscriber used to receive messages from the cloud platform.">
        </AD>
        
        <AD id="can.name"
            name="can.name"
            type="String"
            cardinality="0"
            required="true"
            default="can0"
            description="CAN socket Name."/>
        
        <AD id="can.identifier"
            name="can.identifier"
            type="Integer"
            cardinality="0"
            required="false"
            default="0"
            description="Can device identifier."/>
            
        <AD id="master"
            name="master"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="Whether this device will act as a master or a slave"/>
            
    </OCD>
    <Designate pid="cn.izhiju.kura.can.CanSocketGate">
        <Object ocdref="cn.izhiju.kura.can.CanSocketGate"/>
    </Designate>
</MetaData>
